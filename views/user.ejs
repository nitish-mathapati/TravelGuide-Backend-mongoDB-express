<body>

    <h2>Search for a City</h2>

    <!-- Search Bar -->
    <div class="search-container">
        <form action="/city/getcity" method="get">
            <input type="text" name="search" placeholder="Search city..." value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
        </form>
    </div>

    <!-- City List -->
    <div class="city-list">
        <h2>City Details</h2>
        <ul>
            <% if (Array.isArray(data) && data.length > 0) { %>
                <% data.forEach(city => { %>
                    <li><%= city.city_name %> - <%= city.state %> - <%= city.pincode %></li>
                <% }); %>
            <% } else { %>
                <li>No cities found.</li>
            <% } %>
        </ul>
    </div>

</body>
